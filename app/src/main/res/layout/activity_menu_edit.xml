<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="pro.gofman.toolbar.MenuEditEdit"
    android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

     <!--   <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/menu_item_hint"
            android:id="@+id/et_menu_item"
            android:textSize="14sp"/>-->


        <com.rey.material.widget.EditText
            android:id="@+id/et_menu_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/menu_item_hint"
            app:et_inputId="@+id/textfield_et_label_input"
            app:et_supportMode="none" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <com.rey.material.widget.Spinner
            android:id="@+id/sp_menu_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:spn_label="Пиктограмма"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <com.rey.material.widget.Spinner
            android:id="@+id/sp_menu_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:spn_label="Тип пункта меню"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <com.rey.material.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_save"
            android:id="@+id/btn_ok"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/material_drawer_primary_dark"
            android:layout_marginTop="16dp"/>

        <com.rey.material.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_cancel"
            android:id="@+id/btn_cancel"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/material_drawer_primary_dark"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"/>

    </LinearLayout>


</LinearLayout>
</ScrollView>

