<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="8dp"
    android:id="@+id/card_device">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:gravity="start">
            <TextView
                android:id="@+id/tv_megadevice_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="22sp"
                android:text="Мегадевайс 328"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/tv_megadevice_ver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v3.34 beta 7"
                android:layout_gravity="end"
                 />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_megadevice_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="Управляет освещением в комнатах: коридор, гостинная, детская, ванная и кухня"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.rey.material.widget.Button
                android:id="@+id/btn_megadevice_el"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/material_drawer_primary_dark"
                android:text="ЭЛЕМЕНТЫ" />

            <com.rey.material.widget.Button
                android:id="@+id/btn_megadevice_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/material_drawer_primary_dark"
                android:text="@string/btn_delete" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>