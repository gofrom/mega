<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="pro.gofman.toolbar.MegaDeviceEdit"
    android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <com.rey.material.widget.EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/megadevice_item_hint"
            android:id="@+id/et_megadevice_item"
            app:et_inputId="@+id/lbl_megadevice_item"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <com.rey.material.widget.EditText
            android:id="@+id/et_megadevice_desc"
            app:et_inputId="@+id/lbl_megadevice_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/megadevice_desc_hint"
            android:inputType="textMultiLine" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">


        <com.rey.material.widget.EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="@string/megadevice_ipaddr_hint"
            android:id="@+id/et_megadevice_ipaddr"
            app:et_inputId="@+id/lbl_megadevice_ipaddr"
            android:inputType="textUri" />
        <com.rey.material.widget.EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/port_hint"
            android:id="@+id/et_megadevice_port"
            app:et_inputId="@+id/lbl_megadevice_port"
            android:inputType="numberDecimal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <com.rey.material.widget.EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/megadevice_pwd_hint"
            android:inputType="textPassword"
            android:id="@+id/et_megadevice_pwd"
            app:et_inputId="@+id/lbl_megadevice_pwd"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <com.rey.material.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_save"
            android:id="@+id/btn_ok"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/material_drawer_primary_dark"
            android:textSize="13sp"
            android:layout_marginTop="16dp"/>

        <com.rey.material.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_cancel"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/btn_cancel"
            android:textColor="@color/material_drawer_primary_dark"
            android:textSize="13sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"/>

    </LinearLayout>


</LinearLayout>
</ScrollView>

