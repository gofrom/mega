<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pro.gofman.mega" >

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.UPDATE_DEVICE_STATS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Settings_Megadevices"
            android:label="@string/title_activity_settings_megadevices" >
        </activity>
        <activity
            android:name=".MegaDeviceEdit"
            android:label="@string/title_activity_mega_device_edit" >
        </activity>
        <activity
            android:name=".ElementsActivity"
            android:label="@string/title_activity_elements" >
        </activity>
        <activity
            android:name=".ElementEditActivity"
            android:label="@string/title_activity_element_edit" >
        </activity>
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name=".MenuEditActivity"
            android:label="@string/title_activity_menu_edit" >
        </activity>
        <activity
            android:name=".WordsActivity"
            android:label="@string/title_activity_words" >
        </activity>
    </application>

</manifest>
